{
  "$schema": "https://opencode.ai/config.json",

  // Optimized for GitHub Copilot Subscription
  "autoupdate": true,

  "disabled_providers": ["google-vertex-anthropic", "google-vertex"],

  // Default models (GitHub Copilot Provider)
  "model": "github-copilot/claude-sonnet-4.5",
  "small_model": "github-copilot/claude-haiku-4.5",

  "agent": {
    // Built-in Primary Agents
    "plan": {
      "mode": "primary",
      "description": "System architect and planner",
      "model": "github-copilot/claude-sonnet-4.5",
      "temperature": 0.1,
      "tools": {
        "write": false,
        "edit": false,
        "execute-plan": false
      }
    },
    "build": {
      "mode": "primary",
      "description": "Senior engineer implementing the plan",
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.3
    },

    // Custom Subagents
    "code-reviewer": {
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.0
    },
    "implementer": {
      "model": "github-copilot/claude-haiku-4.5"
    },
    "spec-reviewer": {
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.0
    },

    // Built-in Subagents
    "general": {
      "model": "github-copilot/claude-haiku-4.5"
    },
    "explore": {
      "model": "github-copilot/claude-haiku-4.5"
    },
    "title": {
      "model": "github-copilot/gpt-5-mini"
    },
    "summary": {
      "model": "github-copilot/gpt-5-mini"
    },
    "compaction": {
      "model": "github-copilot/gpt-5-mini"
    }
  },

  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  }
}
