{
  "$schema": "https://opencode.ai/config.json",

  // Optimized for Google Gemini Suite
  "autoupdate": true,

  "plugin": ["opencode-gemini-auth@latest"],
  "disabled_providers": ["google-vertex-anthropic", "google-vertex"],

  // Default models
  "model": "google/gemini-2.5-pro",
  "small_model": "google/gemini-2.5-flash",

  "provider": {
    "google": {
      "options": {
        // Replace with your Google Cloud Project ID
        "projectId": "your-google-cloud-project-id"
      }
    }
  },

  "agent": {
    // Built-in Primary Agents
    "plan": {
      "mode": "primary",
      "description": "System architect and planner",
      "model": "google/gemini-3-pro-preview",
      "temperature": 0.1,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    },
    "build": {
      "mode": "primary",
      "description": "Senior engineer implementing the plan",
      "model": "google/gemini-2.5-pro",
      "temperature": 0.3
    },

    // Custom Subagent (defined in agent/code-reviewer.md)
    "code-reviewer": {
      "mode": "subagent",
      "description": "Code quality and correctness reviewer",
      "model": "google/gemini-3-pro-preview",
      "temperature": 0.0,
      "tools": {
        "write": false,
        "edit": false,
        "bash": true
      }
    },

    // Built-in Subagents
    "general": {
      "model": "google/gemini-2.5-flash"
    },
    "explore": {
      "model": "google/gemini-2.5-flash"
    }
  },

  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  }
}
